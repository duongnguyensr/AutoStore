                data: { 'Id': id },
                datatype: 'html',
                type: 'Get',
                success: function () {
                    console.log("xoa thanh cong");
                    location.reload();
                },
                error: function () {
                }
            });
        });
    }




    function setedit(id, name, manv, date, mancc) {
        $('#edit').modal('toggle');
        $('#tenpnedit').val(name);
        $('#manvedit').val(manv);
        $('#datetimeedit').val(date);
        $('#manccedit').val(mancc);
        $('#formupdate').attr("action", "/PhieuNhap/update?id=" + id);
    }





    function DetailFunc(id, name, manv, date, mancc) {
        $('#insertmodal').modal('toggle');
