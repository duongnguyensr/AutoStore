<script type="text/javascript">


    function confirmDelete(id,ten) {
        $('#lable').html(ten);
        $("#btnContinueDelete").click(function () {
            $.ajax({
                url: "/KhachHang/Delete",
                data: { 'Id': id },
                datatype: 'html',
                type:'Get',
                success: function () {
                    console.log("xoa thanh cong");
                    location.reload();
                },
                error: function () {
                }
            });
        });
    }




    function setedit(id, ten, email, phone, adress) {
        $('#edit').modal('toggle');
        $('#nameedit').val(ten);
        $('#emailedit').val(email);
        $('#phoneedit').val(phone);
        $('#textareaedit').val(adress);
        $('#formupdate').attr("action", "/KhachHang/update?id=" + id);
    }



   

    function DetailFunc(id, ten, email, phone, adress) {
        $('#insert').modal('toggle');
        $('#myModalLabelinsert').html('<i class="fa  fa-chevron-right"></i>     Chi tiết khách hàng');
        $('#name').val(ten);
        $('#email').val(email);
        $('#phone').val(phone);
        $('#textarea').val(adress);
        $("#name").prop('disabled', true);
        $("#email").prop('disabled', true);
        $("#phone").prop('disabled', true);
        $("#textarea").prop('disabled', true);
        $("#send").prop('disabled',true);
    }


    function emptyvalue() {
        $('#name').val('');
        $('#email').val('');
        $('#phone').val('');
        $('#textarea').val('');
        $("#send").prop('disabled',false);
        $("#name").prop('disabled', false);
        $("#email").prop('disabled', false);
        $("#phone").prop('disabled', false);
        $("#textarea").prop('disabled', false);
    }


    //$('#myDatepicker2').datetimepicker({
    //    format: 'DD.MM.YYYY'
    //});

</script>



